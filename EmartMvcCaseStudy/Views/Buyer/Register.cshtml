@model EmartMvcCaseStudy.Models.Buyer

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<h4>Buyer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BUSERNAME" class="control-label"></label>
                <input asp-for="BUSERNAME" class="form-control" />
                <span asp-validation-for="BUSERNAME" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BPASSWORD" class="control-label"></label>
                <input asp-for="BPASSWORD" class="form-control" type="password"/>
                <span asp-validation-for="BPASSWORD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BEMAILID" class="control-label"></label>
                <input asp-for="BEMAILID" class="form-control" />
                <span asp-validation-for="BEMAILID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BMOBILENO" class="control-label"></label>
                <input asp-for="BMOBILENO" class="form-control" />
                <span asp-validation-for="BMOBILENO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BLDT" class="control-label"></label>
                <input asp-for="BLDT" class="form-control" type="date"/>
                <span asp-validation-for="BLDT" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<input type="file" id="ImageId" onchange="fileCheck(this)"/>*@
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <h3 class="text-primary">@ViewBag.msg</h3>
        </div>
    </div>
</div>

<div>
    <h3 class="text-primary">Existing User Click to..<a asp-action="Login">Login</a></h3>
</div>

